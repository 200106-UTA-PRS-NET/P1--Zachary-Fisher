@model WebUi.Models.OrderViewModel

@{
    ViewData["Title"] = "Create Order";
}
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StoreName" class="control-label"></label>
                <p>
                    <input type="radio" name="StoreName" value="House of Pizza" />House of Pizza
                    <input type="radio" name="StoreName" value="Pizza Hut" />Pizza Hut
                    <input type="radio" name="StoreName" value="Papa Johns" />Papa John's
                </p>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Order Index</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
