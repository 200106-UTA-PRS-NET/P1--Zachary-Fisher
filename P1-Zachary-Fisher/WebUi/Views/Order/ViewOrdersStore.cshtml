@model StoreInputModel
@{
    ViewData["Title"] = "ViewOrdersStore";
}

<h1>ViewOrdersStore</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ViewOrdersByStore">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SName" class="control-label"></label>
                <p>
                    <input type="radio" name="SName" value="House of Pizza" />House of Pizza
                    <input type="radio" name="SName" value="Pizza Hut" />Pizza Hut
                    <input type="radio" name="SName" value="Papa Johns" />Papa John's
                </p>
            </div>
            <div class="form-group">
                <input type="submit" value="View Orders By Store" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
