@model WebUi.Models.PizzaViewModel

@{
    ViewData["Title"] = "Add Pizza";
}
<h1>Create Order</h1>

<h4>Pricing</h4>
<hr />

<table style="width:100%">
    <tr>
        <th>Style</th>
        <th>6"</th>
        <th>8"</th>
        <th>10"</th>
        <th>12"</th>
        <th>14"</th>
    </tr>
    <tr>
        <td>Hawaiian</td>
        <td>$5.00</td>
        <td>$5.50</td>
        <td>$6.00</td>
        <td>$6.50</td>
        <td>$7.00</td>
    </tr>
    <tr>
        <td>3 meat</td>
        <td>$5.25</td>
        <td>$5.75</td>
        <td>$6.25</td>
        <td>$6.75</td>
        <td>$7.25</td>
    </tr>
    <tr>
        <td>Supreme</td>
        <td>$5.50</td>
        <td>$6.00</td>
        <td>$6.50</td>
        <td>$7.00</td>
        <td>$7.50</td>
    </tr>
    <tr>
        <td>Cheeseburger</td>
        <td>$5.25</td>
        <td>$5.75</td>
        <td>$6.25</td>
        <td>$6.75</td>
        <td>$7.25</td>
    </tr>
    <tr>
        <td>Bacon Cheeseburger</td>
        <td>$5.50</td>
        <td>$6.00</td>
        <td>$6.50</td>
        <td>$7.00</td>
        <td>$7.50</td>
    </tr>
</table>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPizza">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Crust" class="control-label"></label>
                <p>
                    <input type="radio" name="Crust" value="thin" />Thin
                    <input type="radio" name="Crust" value="deep dish" />Deep Dish
                    <input type="radio" name="Crust" value="sicilian" />Sicilian
                </p>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <p>
                    <input type="radio" name="Size" value="6" />6"
                    <input type="radio" name="Size" value="8" />8"
                    <input type="radio" name="Size" value="10" />10"
                    <input type="radio" name="Size" value="12" />12"
                    <input type="radio" name="Size" value="14" />14"
                </p>
            </div>
            <div class="form-group">
                <label asp-for="Preset" class="control-label"></label>
                <p>
                    <input type="radio" name="Preset" value="hawaiian" />Hawaiian
                    <input type="radio" name="Preset" value="3 meat" />3 meat
                    <input type="radio" name="Preset" value="supreme" />Supreme
                    <input type="radio" name="Preset" value="cheeseburger" />Cheeseburger
                    <input type="radio" name="Preset" value="bacon cheeseburger" />Bacon cheeseburger
                </p>
            </div>
            <div class="form-group">
                <input type="submit" value="Add Pizza" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>